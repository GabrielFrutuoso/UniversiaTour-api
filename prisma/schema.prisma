// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//user model
model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  bio      String?
  sex      String
  birthday DateTime?
  role     role @default(USER) 
}

//roles model
enum role {
  USER
  ADMIN
}
